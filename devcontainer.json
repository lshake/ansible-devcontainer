// For format details, see https://aka.ms/devcontainer.json. For config options, see the README at:
// https://github.com/microsoft/vscode-dev-containers/tree/v0.161.0/containers/ubuntu
{
	"name": "ansiblevscode",
	"build": {
		"dockerfile": "Dockerfile"
	},

	// Set *default* container specific settings.json values on container create.
	"settings": {
		"terminal.integrated.shell.linux": "/bin/bash",
		"terminal.integrated.shellArgs.linux": ["-l"]
	},

	// Add the IDs of extensions you want installed when the container is created.
	"extensions": [],

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "uname -a",

	// Comment out connect as root instead. More info: https://aka.ms/vscode-remote/containers/non-root.
	"remoteUser": "vscode",

	"mounts": [
		"source=${localEnv:HOME}/etc/ca.crt,target=/etc/pki/ca-trust/source/anchors/ca.crt,type=bind,consistency=cached",
		"source=${localEnv:ANSIBLE_VAULT_PASSWORD_FILE},target=/home/vscode/.vault_pass,type=bind,consistency=cached",
		"source=${localEnv:HOME}/.ansible.cfg,target=/home/vscode/.ansible.cfg,type=bind,consistency=cached",
		"source=${localEnv:HOME}/.ssh,target=/home/vscode/.ssh,type=bind,consistency=cached",
		"source=${localEnv:HOME}/etc,target=/home/vscode/etc,type=bind,consistency=cached",
		"source=projectname-bashhistory,target=/commandhistory,type=volume"
	],

	"postStartCommand": [
		"/usr/bin/sudo",
		"/usr/bin/update-ca-trust",
		"extract"
	],

	"remoteEnv": {
		"VCENTER_HOSTNAME": "${localEnv:VCENTER_HOSTNAME}",
		"VCENTER_USERNAME": "${localEnv:VCENTER_USERNAME}",
		"VCENTER_PASSWORD": "${localEnv:VCENTER_PASSWORD}",
		"ANSIBLE_VAULT_PASSWORD_FILE": "/home/vscode/.vault_pass"
	}

}